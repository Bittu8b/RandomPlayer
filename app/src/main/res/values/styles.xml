<resources xmlns:tools="http://schemas.android.com/tools">








    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"

        >
        <item name="android:color">#000</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />








    <style name="TextApperance.Album.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="TextApperance.Artist.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>


    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background_dark</item>
    </style>

    <style name="CardViewStyle.Black" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background_black</item>
    </style>

    <style name="Theme.AppFullScreen.Black.NoActionBar" parent="Theme.AppCompat.NoActionBar" />

    <style name="Theme.Bhai.NoActionBar" parent="Theme.AppCompat.NoActionBar" />

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">
            #000
        </item>
        <item name="colorPrimaryDark">
            #000
        </item>
        <item name="colorAccent">
            #FFF
        </item>
    </style>

    


</resources>
