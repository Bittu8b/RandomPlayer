<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thakur.randomplayer.Fragments.NowPlayingScreen.PlayerScreen2">

    <RelativeLayout
        android:layout_above="@+id/control_bg_screen2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/album_art_blurred"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#81000000" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/album_art_screen2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/control_bg_screen2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <RelativeLayout
        android:id="@+id/control_bg_screen2"
        android:background="#000"
        android:layout_alignParentBottom="true"

        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout

            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev_screen2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                app:srcCompat="@drawable/ic_skip_previous_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/playpause_screen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_play_arrow_white2_24dp" />

            <ImageView
                android:id="@+id/next_screen2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_toEndOf="@+id/playpause_screen2"
                android:layout_toRightOf="@+id/playpause_screen2"
                app:srcCompat="@drawable/ic_skip_next_black_24dp" />


        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekbar_screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView

                app:srcCompat="@drawable/ic_share_24dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp" />

            <ImageView

                app:srcCompat="@drawable/ic_add_white_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp" />

            <ImageView
                app:srcCompat="@drawable/ic_equalizer_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp" />

            <ImageView
                app:srcCompat="@drawable/ic_queue_24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp" />

            <ImageView
                app:srcCompat="@drawable/ic_shuffle_36dp"
                
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp" />

            <ImageView
                app:srcCompat="@drawable/ic_repeat_24dp"

                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
