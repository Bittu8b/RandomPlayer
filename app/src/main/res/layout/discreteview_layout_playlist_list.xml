<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="70dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">


    <android.support.v7.widget.CardView
        android:id="@+id/playlist_image_cardview"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/discrete_big_image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/playlist_list_linear_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/playlist_image_cardview"
        android:layout_width="200dp"
        android:layout_height="60dp">

        <TextView
            android:maxLines="1"
            android:id="@+id/playlist_list_name"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="PlayList"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/playlist_list_overflow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>