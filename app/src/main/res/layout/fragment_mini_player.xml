<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context="com.example.thakur.randomplayer.MiniPlayer">


    <ImageView

        android:id="@+id/second_player_screen_image"
        android:layout_width="70dp"
        android:layout_height="match_parent" />

    <TextView
        android:maxLines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="Title"
        android:id="@+id/second_player_screen_title"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="70dp" />

    <ImageView
        android:background="@color/primary"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="310dp"
        app:srcCompat="@drawable/ic_play_arrow_white2_24dp"
        android:id="@+id/second_player_screen_playpause"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</FrameLayout>
